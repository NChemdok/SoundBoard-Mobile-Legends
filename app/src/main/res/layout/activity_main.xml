<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/mlbbimage"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:layout_width="100sp"
        android:layout_height="100sp" />

    <ImageView
        android:id="@+id/options"
        android:src="@drawable/help"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        android:layout_width="40sp"
        android:layout_height="40sp" />

    <ImageView
        android:id="@+id/mlbbimage2"
        android:src="@drawable/head"
        android:layout_below="@+id/mlbbimage"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="100sp" />

    <ImageButton
        android:id="@+id/btn1"
        android:layout_below="@+id/mlbbimage2"
        android:layout_width="90dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/assassin"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_below="@id/mlbbimage2"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/mage"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_below="@id/mlbbimage2"
        android:layout_width="90dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/fighter"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btn4"
        android:layout_below="@+id/btn1"
        android:layout_width="90dp"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@drawable/tank"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btn5"
        android:layout_below="@+id/btn1"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:src="@drawable/support"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btn6"
        android:layout_below="@+id/btn1"
        android:layout_width="90dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:src="@drawable/marksman"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_height="100dp" />

    <ImageButton
        android:id="@+id/btn7"
        android:layout_below="@+id/btn4"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/announcer"
        android:layout_height="100dp" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7717760204588800/4418473656">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>